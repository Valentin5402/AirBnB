<%= simple_form_for [@flat, @booking], data: { controller: 'flatpickr' }, url: flat_bookings_path(@flat) do |f| %>
  <%= f.input :start_date, as: :string, html5: true, input_html: {data: { flatpickr_target: "startDate" }, value: @booking.start_date || Date.today}, label: 'Date d\'arrivée' %>
  <%= f.input :end_date, as: :string, html5: true, input_html: {data: { flatpickr_target: "endDate" }, id: 'end_time',value: @booking.end_date || Date.today + 1}, label: 'Date de départ' %>
  <%= f.button :submit, "Réserver", class: "btn btn-primary" %>
<% end %>
