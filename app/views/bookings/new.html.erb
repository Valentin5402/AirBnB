
  <div class="row justify-content-center mt-4">
    <div class="col-3">
      <%= simple_form_for [@flat, @booking], url: flat_bookings_path do |f| %>
        <%= f.input :start_date, as: :date, html5: true, input_html: {value: @booking.start_date || Date.today, class: @check ? 'error' : '' }, label: 'Date d\'arrivée' %>
        <%= f.input :end_date, as: :date, html5: true, input_html: {value: @booking.end_date || Date.today + 1, class: @check ? 'error' : '' }, label: 'Date de départ' %>
        <%= f.button :submit, class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
